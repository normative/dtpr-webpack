<div class="row">
  <% if(!contentLeft) { %>
  <div class="d-none d-md-block col-md-8"></div>
  <% }%>
  <div class="col-3 col-md-1 text-center d-flex align-items-center flex-column">
    <div><%= require("ejs-loader!./icon.ejs")({icon:sign[0]}) %></div>
    <div class="d-flex flex-row my-n1">
      <%= require("ejs-loader!./icon.ejs")({icon:sign[1]}) %>
      <%= require("ejs-loader!./icon.ejs")({icon:sign[2]}) %>
    </div>
    <div><%= require("ejs-loader!./icon.ejs")({icon:sign[3]}) %></div>
  </div>
  <div class="col-9 col-md-3">
    <h5><%= title %></h5>
    <h6>
      <%= description %>
    </h6>
  </div>
  <% if(contentLeft) { %>
  <div class="d-none d-md-block col-md-8"></div>
  <% }%>
</div>
<div class="row">
  <% if(!contentLeft) { %>
  <div class="d-none d-md-block col-md-8"></div>
  <% }%>
  <div class="col-12 col-md-4">
    <ul class="list-group mt-5 mb-5">
      <% for (var i =0; i <features.length; i++ ) { %>
      <li
        class="list-group-item d-flex align-items-center px-0 py-2 border-left-0 border-right-0" style="background:transparent;"
      >
        <div class="mr-3">
          <%= require("ejs-loader!./icon.ejs")({icon:features[i].icon}) %>
        </div>
        <div>
          <p class="my-0"><small><%= features[i].title %></small></p>
          <h6 class="my-0"><%= features[i].description %></h6>
        </div>
      </li>
      <% } %>
    </ul>
  </div>
  <% if(contentLeft) { %>
  <div class="d-none d-md-block col-md-8"></div>
  <% }%>
</div>
